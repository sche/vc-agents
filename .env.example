# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vc_agents

# ============================================================================
# LLM API Keys
# ============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# ============================================================================
# External APIs
# ============================================================================

# Farcaster (Neynar API)
NEYNAR_API_KEY=your-neynar-api-key

# Twitter/X (Optional - requires elevated access)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=

# DefiLlama (usually no key required, but rate-limited)
DEFILLAMA_API_KEY=

# ============================================================================
# Redis (Optional - for distributed rate limiting)
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Application Settings
# ============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Rate limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_HOUR=100

# Crawler settings
CRAWLER_USER_AGENT=VC-Agents-Bot/1.0 (+https://yoursite.com/bot)
CRAWLER_RESPECT_ROBOTS_TXT=true
CRAWLER_MAX_CONCURRENT=5
CRAWLER_REQUEST_DELAY_MS=1000

# Screenshot storage (optional)
SCREENSHOT_STORAGE=local  # local, s3, gcs
SCREENSHOT_PATH=./data/screenshots

# S3 Configuration (if using S3 for screenshots)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ============================================================================
# Monitoring & Logging
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Sentry (optional error tracking)
SENTRY_DSN=

# ============================================================================
# Agent Configuration
# ============================================================================

# How far back to fetch deals on first run (days)
DEALS_LOOKBACK_DAYS=90

# Minimum confidence for social enrichment
ENRICHMENT_MIN_CONFIDENCE=0.6

# Re-crawl interval (days)
RECRAWL_AFTER_DAYS=30

# ============================================================================
# LangGraph Settings
# ============================================================================
LANGGRAPH_CHECKPOINTER=postgres  # postgres, memory, redis
LANGGRAPH_MAX_ITERATIONS=10
LANGGRAPH_TIMEOUT_SECONDS=300
